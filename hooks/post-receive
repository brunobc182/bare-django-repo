#!/usr/bin/env bash

source ./utils/set_paths.sh
source ${UTILS_PATH}/log_messages.sh

while read oldrev newrev refname; do
  log "Post-receive started."

  cd ${PROJECT_PATH}

  ${UTILS_PATH}/read_app_json.sh

  section "Restart Apache server"
  ${APP_PATH}/apache2/bin/restart
  check_error $?

  log "Post-receive ended."
  echo ""
  success "Deployment performed successfully!"
done
